@model List<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="actions-component">
    <a class="btn" href="/admin/roles/create">CREATE</a>
</div>

@if (Model.Count > 0)
{
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-2">
                <div>ROLE NAME</div>
                <div>IS ADMIN</div>
            </div>
            <div class="items">
                @foreach (var role in Model)
                {
                    <a class="item" href="/admin/roles/@role.Id">
                        <div class="item-wrapper by-2">
                            <div>@role.FriendlyName</div>
                            <div>@(role.IsAdmin ? "yes" : "no")</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("_NoData")
}

