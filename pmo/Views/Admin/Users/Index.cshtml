@model List<forms.UserForm>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="actions-component">
    <div class="wrapper">
        <div class="header">
            <h1><i class="fas fa-user"></i> Users</h1>
        </div>
        <div class="actions">
            <div class="action"><a type="button" class="btn green" href="/admin/users/create"><i class="fas fa-plus"></i> Create new User</a></div>
        </div>
    </div>
</div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-2">
                <div>Network username</div>
                <div>Role assigned</div>
            </div>
            <div class="items">
                @foreach (var user in Model) {
                    <a class="item" href="/admin/users/@user.Id">
                        <div class="item-wrapper by-2">
                            <div>@user.NetworkUsername</div>
                            <div>@user.Role.FriendlyName</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}

