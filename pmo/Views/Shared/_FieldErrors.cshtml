@model string

@{
    List<string> errors = new List<string>();

    if (ViewBag.Errors != null) {
        var modelState = (ModelStateDictionary)ViewBag.Errors;

        var key = modelState.FirstOrDefault(error => error.Key == Model);

        if(!key.Equals(default(KeyValuePair<string,ModelStateEntry>))) {
            errors = key.Value
            .Errors
            .Select (s => s.ErrorMessage)
            .ToList();
        }
        
    }
}

@foreach(var error in errors) {
    <li>@error</li>
}
