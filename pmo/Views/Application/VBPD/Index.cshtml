@model List<VBPDViewModel>

@{
    ViewData["Title"] = "Prjects";
}

<div class="actions-component">
    <div></div>
    <div><a class="btn large" href="/create">CREATE NEW VBPD PROJECT</a></div>
    <div><a class="btn large" href="/admin">ADMIN</a></div>
</div>

<h1>Projects</h1>

@if (Model.Count > 0)
{
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-13">
                <div>Name</div>
                <div>Sales Force Number</div>
                <div>Category</div>
                <div>Classification</div>
                <div>Design Authority</div>
                <div>ProductLine</div>
            </div>
            <div class="items">
                @foreach (var modelItem in Model)
                {
                    <a class="item" >
                        <div class="item-wrapper by-13">
                            <div>@modelItem.Project.Name</div>
                            <div>@modelItem.Salesforce</div>
                            <div>@modelItem.ProjectCategory.Name</div>
                            <div>@modelItem.ProjectClassification.Name</div>
                            <div>@modelItem.DesignAuthority.Name</div>
                            <div>@modelItem.ProductLine.Name</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("_NoData")
}

