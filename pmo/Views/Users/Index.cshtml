@model List<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="actions-component">
    <a class="btn" href="/admin/users/create">CREATE</a>
</div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-13">
                <div>NETWORK USERNAME</div>
            </div>
            <div class="items">
                @foreach (var user in Model) {
                    <a class="item" href="/admin/users/@user.Id">
                        <div class="item-wrapper by-13">
                            <div>@user.NetworkUsername</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}

