
@model dbModels.ProjectJustification

@{
    ViewData["Title"] = "Technical Feasibility & Scope";
    Layout = "_VbpdProjectDetailLayout";
}

<div class="actions-component">
    <div class="wrapper">
        <div class="header">
            <h1><i class="icon fas fa-info-circle"></i> @ViewData["Title"]</h1>
        </div>
    </div>
</div>

<div class="layout-horrizontal-component">
    <div class="wrapper">
        <div class="sections">
            <div class="section">
                <div class="detail-component">
                    <div class="wrapper">
                        <div class="details">
                            <div class="detail">
                                <div class="label">Add To Inhouse Technical Abilities </div>
                                <div class="value">@Model.AddToInhouseTechnicalAbilities</div>
                            </div>
                            <div class="detail">
                                <div class="label">Advantages We Offer</div>
                                <div class="value">@Model.AdvantagesWeOffer</div>
                            </div>
                            <div class="detail">
                                <div class="label">Application</div>
                                <div class="value">@Model.Application</div>
                            </div>
                            <div class="detail">
                                <div class="label">Benchmark Samples</div>
                                <div class="value">@Model.BenchmarkSamples</div>
                            </div>
                            <div class="detail">
                                <div class="label">Competetion</div>
                                <div class="value">@Model.Competetion</div>
                            </div>
                            <div class="detail">
                                <div class="label">Customer Motivation</div>
                                <div class="value">@Model.CustomerMotivation</div>
                            </div>
                            <div class="detail">
                                <div class="label">Drawing Spec Standards</div>
                                <div class="value">@Model.DrawingSpecStandards</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="detail-component">
                    <div class="wrapper">
                        <div class="details">

                            <div class="detail">
                                <div class="label">Other Requirements</div>
                                <div class="value">@Model.OtherRequirements</div>
                            </div>
                            <div class="detail">
                                <div class="label">Model Requirements</div>
                                <div class="value">@Model.RegulatoryRequirements</div>
                            </div>
                            <div class="detail">
                                <div class="label">Scope</div>
                                <div class="value">@Model.Scope</div>
                            </div>
                            <div class="detail">
                                <div class="label">Single Use Product</div>
                                <div class="value">@Model.SingleUseProduct</div>
                            </div>
                            <div class="detail">
                                <div class="label">Technical Feasibility</div>
                                <div class="value">@Model.TechnicalFeasibility</div>
                            </div>
                            <div class="detail">
                                <div class="label">Why Our Offer Preferred</div>
                                <div class="value">@Model.WhyOurOfferPreferred</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>