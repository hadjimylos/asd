@model List<dbModels.KeyCharacteristic>
@{
    ViewData["Title"] = "List Key Characteristics";
    Layout = "_VbpdProjectDetailLayout";
}

<div class="actions-component">
    <div class="wrapper">
        <div class="header">
            <h1><i class="fas fa-list-alt"></i> @ViewData["Title"]</h1>
        </div>
        <div class="actions">
            <a class="btn" href="key-characteristic/create"><i class="fas fa-plus"></i> Create new Key Characteristic</a>
        </div>
    </div>
</div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title">
                <div>Item Number</div>
                <div>Requirement</div>
                <div>Requirement Source</div>
                <div>Measured Value</div>
                <div>Expeted Outcome / Risk</div>
                <div><!-- placeholder edit --></div>
                <div><!--placeholder create--></div>

            </div>
            <div class="items">
                @foreach (var kc in Model) {
                    <div class="item">
                        <div class="item-wrapper">
                            <div>@kc.ItemNumber</div>
                            <div>@kc.Requirement</div>
                            <div>@kc.RequirementSource.Name</div>
                            <div>@kc.MeasuredValue</div>
                            <div>@kc.ExpectedOutcomeRisk</div>
                            <div><!--placeholder--></div>
                            <a href="key-characteristic/@kc.Id"><i class='icon fas fa-edit'></i> Edit</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}
