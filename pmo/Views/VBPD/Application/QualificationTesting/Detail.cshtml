@model QualificationTestingViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "_VbpdProjectDetailLayout";
}

<div class="detail-component">
    <div class="wrapper">
        <div class="header">
            <h1>Details</h1>
            <a type="button" class="btn green" href="Edit">Edit</a>
        </div>
        <div class="details">
            <div class="detail">
                <div class="detail">
                    <div class="label">Is Qualification Required</div>
                    <div class="data">@Model.IsQualificationRequired</div>
                </div>
                <div class="detail">
                    <div class="label">Description</div>
                    <div class="data">@Model.Description</div>
                </div>
                <div class="detail">
                    <div class="label">Attachment Url</div>
                    <div class="data">@Model.AttachmentUrl</div>
                </div>
            </div>
        </div>
    </div>
</div>

