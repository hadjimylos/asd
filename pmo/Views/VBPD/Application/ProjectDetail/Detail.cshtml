@model VBPDProjectDetailViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "_VbpdProjectDetailLayout";
}


<div class="actions-component">
    <div class="wrapper">
        <div class="header">
            <h1>Projects</h1>
        </div>
        <div class="actions">
            <div class="action"><a class="btn green">Add new Version</a></div>
        </div>
    </div>
</div>

<div class="detail-component">
    <div class="wrapper">
        <div class="header-wrapper">
            <div class="header">
                <h1>Details</h1>
            </div>
        </div>
        <div class="details">
            <div class="detail">
                <div class="label">SALESFORCE</div>
                <div class="value">@Model.Salesforce</div>
            </div>
            <div class="detail">
                <div class="label">ENGINEERING CHECKLIST URL</div>
                <div class="value">@Model.EngineeringChecklistUrl</div>
            </div>
            <div class="detail">
                <div class="label">PROJECT PROCESSTYPE</div>
                <div class="value">@Model.ProjectProcessType</div>
            </div>
            <div class="detail">
                <div class="label">EXPORT CONTROLCODE</div>
                <div class="value">@Model.ExportControlCode</div>
            </div>
            <div class="detail">
                <div class="label">PROJECT CATEGORIES</div>
                <select disabled="disabled" asp-for="ProjectCategoryTagId" asp-items="Model.ProjectCategoryTagDropDown" class="value select2"></select>
            </div>
            <div class="detail">
                <div class="label">PROJECT CLASSIFICATIONS</div>
                <select disabled="disabled" asp-for="ProjectClassificationTagId" asp-items="Model.ProjectClassificationDropDown" class="value select2"></select>
            </div>
            <div class="detail">
                <div class="label">PRODUCT LINES</div>
                <select disabled="disabled" asp-for="ProductLineTagId" asp-items="Model.ProductLineDropDown" class="value select2"></select>
            </div>
            <div class="detail">
                <div class="label">DESIGN AUTHORITIES</div>
                <select disabled="disabled" asp-for="DesignAuthorityTagId" asp-items="Model.DesignAuthorityDropDown" class="value select2"></select>
            </div>
            <div class="detail">
                <div class="label">EXPORT APPLICATION TYPES</div>
                <select disabled="disabled" asp-for="ExportApplicationTypeTagId" asp-items="Model.ExportApplicationTypeDropDown" class="value select2"></select>
            </div>
            <div class="detail">
                <div class="label">SALES REGIONS</div>
                <select disabled="disabled" asp-for="SalesRegionIds" asp-items="Model.SalesRegionsDropDown" class="value select2"></select>
            </div>
            <div class="detail">
                <div class="label">CUSTOMERS</div>
                <select disabled="disabled" asp-for="CustomerIds" asp-items="Model.CustomerDropDown" class="value select2"></select>
            </div>
        </div>
    </div>

</div>