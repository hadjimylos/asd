@model List<dbModels.ProductInfrigmentPatentability>
@{
    ViewData["Title"] = "List Product Infrigment Patentability";
    Layout = "_VbpdProjectDetailLayout";
}

<div class="actions-component">
    <div class="wrapper">
        <div class="header">
            <h1><i class="fas fa-list-alt"></i> @ViewData["Title"]</h1>
        </div>
        <div class="actions">
            <a class="btn" href="product-infrigment-patentability/create"><i class="fas fa-plus"></i> Create new Product Infrigment Patentability</a>
        </div>
    </div>
</div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title">
                <div>Patent Number</div>
                <div>Issue</div>
                <div>Mitigation Strategy</div>
                <div>Contains Features Requiring IP Protection</div>
                <div>Invention Disclosure Submitted</div>
                <div>Product first time offered for Sale</div>
                <div><!-- placeholder edit --></div>
                <div><!--placeholder create--></div>

            </div>
            <div class="items">
                @foreach (var pip in Model) {
                    <div class="item">
                        <div class="item-wrapper">
                            <div>@pip.PatentNumber</div>
                            <div>@pip.Issue</div>
                            <div>@pip.MitigationStrategy</div>
                            <div>@pip.ContainsFeaturesRequiringIPProtection</div>
                            <div>@pip.InventionDisclosureSubmitted</div>
                            <div>@pip.ProductFirstTimeOfferedForSale</div>
                            <div><!--placeholder--></div>
                            <a href="product-infrigment-patentability/@pip.Id"><i class='icon fas fa-edit'></i> Edit</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}
