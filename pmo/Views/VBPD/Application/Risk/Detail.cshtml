@model List<dbModels.Risk>
@{
    ViewData["Title"] = "Risk Detail";
    Layout = "_VbpdProjectDetailLayout";

}

<div class="actions-component">
    <div class="wrapper">
        <div class="header">
            <h1><i class="fas fa-list-alt"></i> @ViewData["Title"]</h1>
        </div>
    </div>
</div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title">
                <div>Risk Name</div>
                <div>Risk Probability (%)</div>
                <div>Risk Impact</div>
                <div>Risk Type</div>
            </div>
            <div class="items">
                @foreach (var risk in Model) {
                    <div class="item">
                        <div class="item-wrapper bold-text">
                            <div>@risk.Name</div>
                            <div>@risk.RiskPropability %</div>
                            <div>@risk.RiskImpact.Name</div>
                            <div>@risk.RiskType.Name</div>
                        </div>
                        @if (risk.Mitigations.Count > 0) {
                            <div class="sub-list">
                                <div class="wrapper">
                                    <div class="sub-title">
                                        <div>Target Date</div>
                                        <div>Responsibility</div>
                                        <div>Mitigation Plan</div>
                                    </div>

                                    <div class="sub-items">
                                        @foreach (var mitigation in risk.Mitigations) {
                                            <div class="sub-item">
                                                <div class="sub-item-wrapper">
                                                    <div>@mitigation.TargetDate.ToString("MM/dd/yyyy")</div>
                                                    <div>@mitigation.Responsibility</div>
                                                    <div>@mitigation.MitigationPlan</div>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    @Html.Partial("_RiskChart", Model)
}
else {
    @Html.Partial("_NoData")
}
