@model forms.RiskForm

<form class="form-component" method="post" action="@Context.Request.Path.Value">
    <input asp-for="Id" type="hidden" />

    @Html.AntiForgeryToken()
    <div class="wrapper">
        <div class="fields">
            <div class="field">
                <div class="label">NAME</div>
                <input asp-for="Name" class="data" type="text" />
                <ul class="errors">
                    @Html.Partial("_FieldErrors", "Name")
                </ul>
            </div>
            <div class="field">
                <div class="label">RISK PROBABILITY (%)</div>
                <input asp-for="RiskPropability" class="data" type="number" step="10" />
                <ul class="errors">
                    @Html.Partial("_FieldErrors", "RiskPropability")
                </ul>
            </div>
            <div class="field">
                <div class="label">RISK TYPE</div>
                <select asp-for="RiskTypeTagId" asp-items="Model.RiskTypeList" class="select2 data">
                    <option hidden disabled selected>-- Select Role--</option>
                </select>
                <ul class="errors">
                    @Html.Partial("_FieldErrors", "RiskTypeTagId")
                </ul>
            </div>
            <div class="field">
                <div class="label">RISK IMPACT</div>
                <select asp-for="RiskImpactTagId" asp-items="Model.RiskImpactList" class="select2 data">
                    <option hidden disabled selected>-- Select Role--</option>
                </select>
                <ul class="errors">
                    @Html.Partial("_FieldErrors", "RiskImpactTagId")
                </ul>
            </div>
            <div class="field">
                <input type="submit" class="data btn" value="SUBMIT" />
            </div>
        </div>
    </div>
</form>