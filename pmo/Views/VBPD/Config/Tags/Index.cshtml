@model List<dbModels.TagCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

    <div class="actions-component">
        <div class="wrapper">
            <div class="header">
                <h1>TAG CATEGORIES</h1>
            </div>
            <div class="actions">
                <div class="action"><a type="button" class="btn green" href="/vbpd-admin/tags/categories/create">CREATE</a></div>
            </div>
        </div>
    </div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-1">
                <div>TAG CATEGORY NAME</div>
                
            </div>
            <div class="items">
                @foreach (var tagcategory in Model) {
                    <a class="item" href="/vbpd-admin/tags/categories/@tagcategory.Id">
                        <div class="item-wrapper by-1">
                            <div>@tagcategory.FriendlyName</div>
                           
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}

