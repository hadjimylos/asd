@model List<TagViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="actions-component">
    <a class="btn" href="/admin/tags/create">CREATE</a>
</div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-2">
                <div>NAME</div>
                <div>TAG CATEGORY</div>
               
            </div>
            <div class="items">
                @foreach (var tag in Model) {
                    <a class="item" href="/admin/tags/@tag.Id">
                        <div class="item-wrapper by-2">
                            <div>@tag.Name</div>
                            <div>@tag.TagCategory.FriendlyName</div>

                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}

