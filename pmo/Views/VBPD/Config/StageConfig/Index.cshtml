@model List<dbModels.StageConfig>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

    <div class="actions-component">
        <div class="wrapper">
            <div class="header">
                <h1>STAGE CONFIGURATION</h1>
            </div>
            <div class="actions">
                <div class="action"><a type="button" class="btn green" href="/vbpd-admin/stage-config/create">CREATE</a></div>
            </div>
        </div>
    </div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-13">
                <div>STAGE</div>
                <div>RISK ASSESMENTS</div>
                <div>PROJ. JUSTIFICATIONS</div>
                <div>BUSINESS CASES</div>
                <div>INFINGEMENT PATENTS</div>
                <div>KEY CHARACTERISTICS</div>
                <div>CUST. DESIGN APPROVALS</div>
                <div>INVESTMENT PLANS</div>
                <div>PRODUCT INTRO CHECKLIST</div>
                <div>RAMP RESOURCE</div>
                <div>QUALIFICATION TESTING</div>
                <div>DESIGN CONCEPTS</div>
                <div>SCHEDULES</div>
                <div>POST LAUNCH REVIEW</div>
            </div>
            <div class="items">
                @foreach (var config in Model) {
                    <a class="item" href="/vbpd-admin/stage-config/@config.Id">
                        <div class="item-wrapper by-13">
                            <div>@config.StageNumber</div>
                            <div>@(config.AllowInsertRiskAssesments ? "allow" : "disallow")</div>
                            <div>@config.MinProjectJustifications</div>
                            <div>@config.MinBusinessCases</div>
                            <div>@config.MinProductInfringementPatentabilities</div>
                            <div>@config.MinKeyCharacteristics</div>
                            <div>@config.MinCustomerDesignApprovals</div>
                            <div>@config.MinInvestmentPlans</div>
                            <div>@config.MinProductIntroChecklist</div>
                            <div>@config.MinRampResourcePlans</div>
                            <div>@config.MinQualificationTesting</div>
                            <div>@config.MinDesignConcepts</div>
                            <div>@config.RequiredSchedules.Count</div>
                            <div>@config.MinPostLaunchReviews</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}

