@model List<dbModels.LiteStageConfig>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

    <div class="actions-component">
        <div class="wrapper">
            <div class="header">
                <h1>VBPD-LITE STAGE CONFIGURATION</h1>
            </div>
            <div class="actions">
                <div class="action"><a type="button" class="btn green" href="/vbpd-admin/lite-stage-config/create">CREATE</a></div>
            </div>
        </div>
    </div>

@if (Model.Count > 0) {
    <div class="list-component">
        <div class="wrapper">
            <div class="title by-13">
                <div>STAGE</div>
                <div>RISK ASSESMENTS</div>
                <div>PROJ. JUSTIFICATIONS</div>
                <div>BUSINESS CASES</div>
                <div>INFINGEMENT PATENTS</div>
                <div>KEY CHARACTERISTICS</div>
                <div>CUST. DESIGN APPROVALS</div>
                <div>INVESTMENT PLANS</div>
                <div>PRODUCT INTRO CHECKLIST</div>
                <div>RAMP RESOURCE</div>
                <div>QUALIFICATION TESTING</div>
                <div>DESIGN CONCEPTS</div>
                <div>SCHEDULES</div>
                <div>POST LAUNCH REVIEW</div>
            </div>
            <div class="items">
                @foreach (var config in Model) {
                    <a class="item" href="/vbpd-admin/lite-stage-config/@config.Id">
                        <div class="item-wrapper by-13">
                            <div>@config.StageNumber</div>
                            <div>@(config.AllowInsertRiskAssesments ? "allow" : "disallow")</div>
                            <div>@(config.MinProjectJustifications ==1 ? "allow" : "disallow")</div>
                            <div>@(config.MinBusinessCases == 1 ? "allow" : "disallow")</div>
                            <div>@(config.MinProductInfringementPatentabilities == 1 ? "allow" : "disallow")</div>
                            <div>@(config.MinKeyCharacteristics == 1 ? "allow" : "disallow")</div>
                            <div>@(config.MinCustomerDesignApprovals == 1 ? "allow" : "disallow")</div>
                            <div>@(config.MinInvestmentPlans == 1 ? "allow" : "disallow")</div>
                            <div>@(config.MinProductIntroChecklist == 1 ? "allow" : "disallow")</div>
                            <div>@(config.RequiredSchedules.Count == 1 ? "allow" : "disallow")</div>
                            <div>@(config.MinPostLaunchReviews == 1 ? "allow" : "disallow")</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
else {
    @Html.Partial("_NoData")
}

